# AI Model Manager MCP Server Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=  # Optional

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Mistral AI API Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# Cohere API Configuration (optional)
COHERE_API_KEY=your_cohere_api_key_here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# LM Studio Configuration (optional)
LMSTUDIO_HOST=http://localhost:1234
LMSTUDIO_TIMEOUT=120

# Database Configuration
DATABASE_PATH=./data/models.db

# Server Configuration
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=60

# Cost Tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD=10.0  # Alert when daily cost exceeds this amount (USD)

# Smart Routing
ENABLE_SMART_ROUTING=true
PREFER_LOCAL_MODELS=true
FALLBACK_TO_CLOUD=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60